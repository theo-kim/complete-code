{
    "compilerOptions": {
        "outDir": "./server/dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "./node_modules/"
            ]
        }
    },
    "include": [
        "./server/src/index.ts"
    ]
}